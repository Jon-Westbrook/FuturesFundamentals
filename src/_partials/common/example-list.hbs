{{#> column-layout--default }}
  <h3 class="article_headline">{{ headline }}</h3>
{{/column-layout--default}}

{{#each examples}}
  {{#> column-layout--default module-type='icon-list' includeGlossary=true }}
    <h4>{{ sum @index 1 }}. {{ headline }}</h4>
    <p>{{{ copy }}}</p>

    {{#each examples}}
      <div class="row icon-list__list scrollAnimation--capable scrollAnimation--before scrollAnimation--dontReset">
        <div class="col-md-3 icon-list__icon">
          <img src="/assets/img/market-types/icon_{{ icon }}.png" class="icon-list__image" />
        </div>
        <div class="col-md-9 icon-list__text">
          <h4>Example {{ sum @index 1 }}</h4>
          <p>{{{ copy }}}</p>
        </div>
      </div>
    {{/each}}

  {{/column-layout--default}}  
{{/each}}